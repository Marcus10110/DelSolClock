<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DelSolClockAppMaui.Pages.UpdatePage"
             Title="Firmware">
    <RefreshView x:Name="FirmwareRefreshView" Refreshing="OnRefreshing">
        <CollectionView x:Name="FirmwareCollection" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="8" BackgroundColor="{StaticResource Primary}" CornerRadius="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Name}" Style="{StaticResource SubHeadline}" />
                            <Label Text="{Binding PublishedAt, StringFormat='Published: {0:g}'}" Style="{StaticResource SubtitleLabel}" />
                            <Label Text="{Binding Body}" FontSize="Small" TextColor="{StaticResource TextColor}" />
                            <Button Text="Update"
                                    CommandParameter="{Binding AssetUrl}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Clicked="OnUpdateClicked" />
                            <Button Text="View Online"
                                    CommandParameter="{Binding HtmlUrl}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Clicked="OnViewOnlineClicked" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>